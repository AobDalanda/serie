{% extends 'base.html.twig' %}
{% block title %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <h2>Series !</h2>
    {% if currentPage > 1 %}
       <div><a href="{{ path('series_list', {'page': currentPage -1}) }}">Previous Page</a></div>
    {% endif %}
    {% if currentPage < maxpage %}
       <div><a href="{{ path('series_list', {'page': currentPage +1}) }}">Next Page</a></div>
    {% endif %}
    <section class="series-list">

        {% for serie in listeserie %}
            <article>
                <a href="{{ path('serie_details', {'id' : serie.id}) }}" title="View serie's detail">
                    <img src="{{ asset('img/posters/series/' ~ serie.poster) }}" alt="{{ serie.name }}">
                </a>
            </article>
        {% endfor %}
    </section>


{% endblock %}


